<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.volley_app">

    <!-- Define camera hardware feature (not required) -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <!-- Permissions for biometric and fingerprint authentication -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" /> <!-- For Android 9.0 (API 28) and above -->
    <uses-permission android:name="android.permission.USE_FINGERPRINT" /> <!-- For older devices supporting only fingerprint -->

    <!-- Permissions for camera and external storage -->
    <uses-permission android:name="android.permission.CAMERA" tools:ignore="ManifestOrder" /> <!-- Camera access -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- Read storage -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- Write storage -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- Internet access -->

    <application
        android:label="volley_app"
        android:icon="@mipmap/ic_launcher"
        android:usesCleartextTraffic="true"> <!-- Allows cleartext HTTP traffic -->

        <activity
            android:name=".MainActivity"
            android:exported="true"
        android:launchMode="singleTop"
        android:taskAffinity=""
        android:theme="@style/LaunchTheme"
        android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
        android:hardwareAccelerated="true"
        android:windowSoftInputMode="adjustResize">

        <!-- Meta-data for Android themes during Flutter initialization -->
        <meta-data
            android:name="io.flutter.embedding.android.NormalTheme"
            android:resource="@style/NormalTheme" />

        <!-- Intent filter to define the entry point of the app -->
        <intent-filter>
            <action android:name="android.intent.action.MAIN" /> <!-- Entry point action -->
            <category android:name="android.intent.category.LAUNCHER" /> <!-- Displays app in launcher -->
        </intent-filter>
    </activity>

    <!-- Meta-data required for Flutter plugin integration -->
    <meta-data
        android:name="flutterEmbedding"
        android:value="2" />
</application>

    <!-- Queries for device activities and apps -->
<queries>
<!-- Allows querying for activities that can process text -->
<intent>
    <action android:name="android.intent.action.PROCESS_TEXT" />
    <data android:mimeType="text/plain" />
</intent>

<!-- Allows querying for apps that can handle URLs -->
<intent>
    <action android:name="android.intent.action.VIEW" />
    <category android:name="android.intent.category.BROWSABLE" />
    <data android:scheme="https" />
</intent>
</queries>
    </manifest>
